# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/database_name

# Template Configuration
NEXT_PUBLIC_TEMPLATE_ID=premium-corporate-template
# API Configuration (for production, use your deployed URL)
NEXT_PUBLIC_API_URL=http://localhost:3000

# Production API URL (uncomment and set for production)
# NEXT_PUBLIC_API_URL=https://your-domain.com

# ISR Revalidation Secret (generate a secure random string)
REVALIDATION_SECRET=your-secure-secret-key-here

# Email (SMTP) Configuration for Contact Form
# Used by `src/lib/mail.ts` and `src/app/api/contact/route.ts`
SMTP_HOST=smtp.example.com
SMTP_PORT=587
# If your provider requires SSL on port 465, set to true; otherwise false
SMTP_SECURE=false
SMTP_USERNAME=your-smtp-username
SMTP_PASSWORD=your-smtp-password

# Comma-separated list of recipients for contact form submissions
CONTACT_RECIPIENTS=contact@your-domain.com
# Optional: the From address used when sending (defaults to no-reply@SMTP_HOST)
SMTP_FROM=no-reply@your-domain.com
